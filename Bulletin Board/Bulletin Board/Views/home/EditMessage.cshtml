@model Bulletin_Board.Models.MessageModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <script type="text/javascript" src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="~/Scripts/ckfinder/ckfinder.js"></script>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
            @Html.DropDownListFor(m => m.zhiban1, (IEnumerable<SelectListItem>)ViewBag.userlist)
            @Html.DropDownListFor(m=>m.fuban,(IEnumerable<SelectListItem>)ViewBag.userlist)
            @Html.DropDownListFor(m => m.zhiban2, (IEnumerable<SelectListItem>)ViewBag.userlist)
            @Html.TextBoxFor(m => m.screenwidth)
            @Html.TextBoxFor(m=>m.screenheight)
            @Html.TextAreaFor(m => m.msg)
            @Html.HiddenFor(m => m.Id)

            <input type="submit" value="submit" />
        }
    </div>
    <script type="text/javascript">
        var editor = CKEDITOR.replace("msg");
        CKFinder.setupCKEditor(editor, "/scripts/ckfinder/");
    </script>
</body>
</html>
